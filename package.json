{
  "name": "code-editor",
  "productName": "Code Editor",
  "version": "1.0.0",
  "description": "Code editor for the ITians",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": {
    "name": "Manish Devgan",
    "email": "manish.nsit8@gmail.com"
  },
  "contributors": [
    {
      "name": "Lakshay Mehra",
      "email": "lakshay344@gmail.com"
    }
  ],
  "license": "ISC",
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-prebuilt": "^1.4.13"
  },
  "build": {
    "appId": "xyz.itians.code",
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "deb": {
      "synopsis": "Code Editor"
    }
  }
}
